.title {
  position: absolute;
  bottom:0;
  margin-left: 35%;
  font-size: x-low; /* Размер текста заголовка */
  text-align: center;
  color: black; /* Цвет заголовка */
  z-index: 1;
  transition: top .5s ease;
}

.titlemac {
  position: absolute;
  bottom:0;
