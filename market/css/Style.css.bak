.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /*background: rgba(0, 0, 0, 0.5); /* Настройка цвета и прозрачности для блока с заголовком */
  /*transition: background 0.5s ease;*/
}

.Iphone14:hover .overlay {
	display: block;
	background-color: Gainsboro;
	opacity: 50%;  /* Настройка цвета и прозрачности для блока с заголовком при наведении */
}

.applewatch:hover .overlay {
	display: block;
