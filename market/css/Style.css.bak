}



.button {
  position: absolute;
  width: 100%;
  left:0;
  top: 40%; /* Отступ сверху */
  text-align: center;
  opacity: 0;
  transition: opacity .35s ease;
}

.button button {
  padding: 15px 40px; /* Отступ */
  text-align: center;
  background: salmon; /* Цвет кнопки */
  color: white; /* Цвет текста */
  cursor: pointer;
  border: 1px solid white; /* Ширина, стиль и цвет границы */
  z-index: 1; 
}

.Iphone14:hover .button {
  opacity: 1;
}

.applewatch:hover .button {
  opacity: 1;
}

.macbook:hover .button {
  opacity: 1;
}

